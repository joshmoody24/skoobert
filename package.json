{
  "name": "skoobert",
  "version": "1.0.0",
  "description": "A lazy subset of JavaScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "test": "vitest",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint",
    "build": "npm run check && tsc && npm run build:web",
    "build:web": "esbuild src/index.ts --bundle --format=esm --platform=browser --target=es2020 --minify --outfile=docs/skoobert.bundle.js",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist docs/skoobert.bundle.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshmoody24/skoobert.git"
  },
  "keywords": [
    "lazy"
  ],
  "author": "Josh Moody",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joshmoody24/skoobert/issues"
  },
  "homepage": "https://github.com/joshmoody24/skoobert#readme",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "esbuild": "^0.25.10",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "type": "module"
}
